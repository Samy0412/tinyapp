<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div>
        <% if(user) { %>

        <form class="form-inline" action="/logout" method="POST">
          <div style="padding: 0px 20px 0px 40px;">
            Logged In As: <%= user.email %>
          </div>
          <button
            style="
              height: 30px;
              text-align: center;
              line-height: 0px;
              margin: 0 auto;
            "
            type="submit"
            class="btn btn-outline-dark"
          >
            Logout
          </button>
        </form>

        <% } else { %>
          <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
              <a class="nav-item nav-link" href="/login" style=color:black onMouseOver="this.style.color='#DCDCDC'" onMouseOut="this.style.color='#000'" >Log In</a>
              <a class="nav-item nav-link" href="/register" style= "color:black;  onMouseOver="this.style.color='#DCDCDC'" onMouseOut="this.style.color='#000'" >Register</a>
              
   
            </div>
            <div>
        <% } %>
      </div>
    </div>
  </nav>
</header>
